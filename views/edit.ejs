<%- include('template/header.ejs')%>
  <div class="container hero-list">
    <form>
      <div class="form-group">
        <label class="col-sm-2 control-label">英雄名称</label>
        <div class="col-sm-10">
          <input type="text" name="name" class="form-control" value="<%= data[0].name%>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">性别</label>
        <div class="col-sm-10">
          <label class="radio-inline">
            <input type="radio" value="男" name="gender" <% if(data[0].gender=='男'){ %> checked <%}%> > 男
          </label>
          <label class="radio-inline">
            <input type="radio" value="女" name="gender"<% if(data[0].gender=='女'){ %> checked <%}%> > 女
          </label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">英雄地址</label>
        <div class="col-sm-10">
          <input type="text" name="name" class="form-control" value="<%= data[0].address%>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">英雄手机</label>
        <div class="col-sm-10">
          <input type="text" name="name" class="form-control" value="<%= data[0].phone1%>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">创建时间</label>
        <div class="col-sm-10">
          <%= data[0].ctime %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-success">保存修改</button>
        </div>
      </div>
    </form>
  </div>
<%- include('template/footer.ejs')%>

